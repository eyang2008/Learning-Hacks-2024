{
  "manifest_version": 3,
  "name": "Summarizer",
  "description": "A Chrome extension that summarizes the key points of a website.",
  "version": "1.0",
  "action": {
    "default_popup": "popup.html",
    "default_icon": "img/icon.png"
  },
  "permissions": [
    "tabs",
    "activeTab",
    "scripting"
  ],
  "content_scripts": [
    {
      "matches": ["<all_urls>"], 
      "js": ["content.js"]
    }
  ]
}